{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "type": "state-timeline",
      "title": "Статусы сервисов",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "up{job=\"xray-core-metrics\"}", "legendFormat": "Xray", "refId": "A" },
        { "expr": "up{job=\"xray-checker\"}", "legendFormat": "xray-checker", "refId": "B" },
        { "expr": "up{job=\"grafana\"}", "legendFormat": "Grafana", "refId": "C" },
        { "expr": "min(xray_proxy_status{job=\"xray-checker\"} or xray_checker_proxy_status{job=\"xray-checker\"} or probe_success{job=\"xray-checker\"})", "legendFormat": "Proxy", "refId": "D" }
      ],
      "options": {
        "rowHeight": 0.9,
        "mergeValues": false,
        "showValue": "never"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Uptime Grafana",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "time() - process_start_time_seconds{job=\"grafana\"}", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1800 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Uptime Xray",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "max(xray_uptime_seconds{job=~\"xray-ui-metrics|xray-core-metrics\"})", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": { "unit": "s", "decimals": 0 }, "overrides": [] }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Онлайн пользователей",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "max(xray_users_online{job=~\"xray-ui-metrics|xray-core-metrics\"})", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": { "decimals": 0 }, "overrides": [] }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Скорость трафика (байт/с) — входящий/исходящий",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "clamp_max(avg_over_time(rate(xray_traffic_uplink_bytes_total{job=\"xray-core-metrics\"}[2m])[5m:]), 1250000)", "legendFormat": "Исходящий", "refId": "A" },
        { "expr": "clamp_max(avg_over_time(rate(xray_traffic_downlink_bytes_total{job=\"xray-core-metrics\"}[2m])[5m:]), 1250000)", "legendFormat": "Входящий", "refId": "B" }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull"]
        },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "lineWidth": 2,
          "fillOpacity": 20,
          "custom": {
            "axisSoftMax": 625000
          }
        },
        "overrides": []
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Задержка прокси (мс, xray-checker)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        {
          "expr": "avg(xray_proxy_latency_ms{job=\"xray-checker\"}) or avg(xray_checker_proxy_latency_ms{job=\"xray-checker\"}) or avg(xray_checker_latency_ms{job=\"xray-checker\"}) or (avg(probe_duration_seconds{job=\"xray-checker\"}) * 1000)",
          "legendFormat": "avg",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Активность пользователей (байт/с)",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        {
          "expr": "sum by (user, alias) ((rate(xray_traffic_user_uplink_bytes_total{job=\"xray-core-metrics\"}[2m]) + rate(xray_traffic_user_downlink_bytes_total{job=\"xray-core-metrics\"}[2m])) * on(user) group_left(alias) xray_user_alias_info{job=~\"xray-ui-metrics|xray-core-metrics\"}) or label_replace(sum by (user) (rate(xray_traffic_user_uplink_bytes_total{job=\"xray-core-metrics\"}[2m]) + rate(xray_traffic_user_downlink_bytes_total{job=\"xray-core-metrics\"}[2m])) unless on(user) xray_user_alias_info{job=~\"xray-ui-metrics|xray-core-metrics\"}, \"alias\", \"$1\", \"user\", \"(.*)\")",
          "legendFormat": "{{alias}} ({{user}})",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] }
    },
    {
      "id": 10,
      "type": "table",
      "title": "Пользователи — email/подпись/трафик",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        {
          "expr": "rate(xray_traffic_user_uplink_bytes_total{job=\"xray-core-metrics\"}[5m])",
          "legendFormat": "{{user}}",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "rate(xray_traffic_user_downlink_bytes_total{job=\"xray-core-metrics\"}[5m])",
          "legendFormat": "{{user}}",
          "format": "table",
          "instant": true,
          "refId": "B"
        },
        {
          "expr": "xray_user_alias_info{job=~\"xray-ui-metrics|xray-core-metrics\"}",
          "legendFormat": "{{user}}",
          "format": "table",
          "instant": true,
          "refId": "C"
        },
        {
          "expr": "(increase(xray_traffic_user_uplink_bytes_total{job=\"xray-core-metrics\"}[30d]) + increase(xray_traffic_user_downlink_bytes_total{job=\"xray-core-metrics\"}[30d])) / 1024 / 1024 / 1024",
          "legendFormat": "{{user}}",
          "format": "table",
          "instant": true,
          "refId": "D"
        }
      ],
      "transformations": [
        { "id": "joinByField", "options": { "byField": "user", "mode": "outer" } },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "job": true,
              "instance": true,
              "__name__": true,
              "Value #C": true
            },
            "renameByName": {
              "user": "Email",
              "alias": "Подпись",
              "Value": "Входящий трафик (B/s)",
              "Value #A": "Входящий трафик (B/s)",
              "Value #B": "Исходящий трафик (B/s)",
              "Value #D": "Трафик за 30д (GB)"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          { "matcher": { "id": "byName", "options": "Входящий трафик (B/s)" }, "properties": [ { "id": "unit", "value": "Bps" } ] },
          { "matcher": { "id": "byName", "options": "Исходящий трафик (B/s)" }, "properties": [ { "id": "unit", "value": "Bps" } ] },
          { "matcher": { "id": "byName", "options": "Трафик за 30д (GB)" }, "properties": [ { "id": "unit", "value": "decgbytes" } ] }
        ]
      }
    },
    {
      "id": 11,
      "type": "piechart",
      "title": "Распределение трафика по протоколам inbound",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 25 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "sum by (protocol) (rate(xray_traffic_inbound_uplink_bytes_total{job=\"xray-core-metrics\"}[10m])) * 8", "legendFormat": "{{protocol}}", "refId": "A" }
      ],
      "options": { "displayLabels": ["name", "percent"], "legend": { "displayMode": "list", "placement": "right" } },
      "fieldConfig": { "defaults": { "unit": "bps" }, "overrides": [] }
    },
    {
      "id": 12,
      "type": "timeseries",
      "title": "Доступность прокси (xray-checker)",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 25 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        {
          "expr": "max by (name, address) (xray_proxy_status{job=\"xray-checker\"} or xray_checker_proxy_status{job=\"xray-checker\"} or probe_success{job=\"xray-checker\"})",
          "legendFormat": "{{name}} {{address}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1
        },
        "overrides": []
      }
    },
    {
      "id": 13,
      "type": "timeseries",
      "title": "Общий трафик за день/месяц",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 34 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "increase(xray_traffic_downlink_bytes_total{job=\"xray-core-metrics\"}[24h])", "legendFormat": "24h", "refId": "A" },
        { "expr": "increase(xray_traffic_downlink_bytes_total{job=\"xray-core-metrics\"}[30d])", "legendFormat": "30d", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] }
    },
    {
      "id": 14,
      "type": "stat",
      "title": "Суммарный трафик пользователей (30d, GB)",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "sum(increase(xray_traffic_user_downlink_bytes_total{job=\"xray-core-metrics\"}[30d])) / 1024 / 1024 / 1024", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": { "unit": "decgbytes" }, "overrides": [] }
    },
    {
      "id": 15,
      "type": "timeseries",
      "title": "Память экспортера",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 34 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "process_resident_memory_bytes{job=\"xray-core-metrics\"}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] }
    },
    {
      "id": 16,
      "type": "timeseries",
      "title": "CPU экспортера (cores)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 42 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "rate(process_cpu_seconds_total{job=\"xray-core-metrics\"}[5m])", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "cores" }, "overrides": [] }
    },
    {
      "id": 17,
      "type": "timeseries",
      "title": "Длительность скрейпа экспортера (сек)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 42 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "xray_exporter_scrape_duration_seconds{job=\"xray-core-metrics\"}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["xray"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Xray Core Metrics",
  "uid": "xray-core-metrics",
