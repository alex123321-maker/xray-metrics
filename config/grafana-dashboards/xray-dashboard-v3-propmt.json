{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Статус Xray-сервиса",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "up{job=\"xray-core-metrics\"}", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Версия Python (exporter)",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "python_info", "legendFormat": "{{version}}", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "name",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": {}, "overrides": [] }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Uptime процесса",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "time() - process_start_time_seconds{job=\"xray-core-metrics\"}", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": { "unit": "s", "decimals": 0 }, "overrides": [] }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Активные пользователи (5m)",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "count(rate(xray_traffic_user_uplink_bytes_total[5m]) > 0)", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": { "decimals": 0 }, "overrides": [] }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Ошибки exporter (5m)",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "sum(increase(xray_exporter_parse_errors_total[5m])) + sum(increase(xray_exporter_fetch_errors_total[5m]))", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Скорость трафика (бит/с) — входящий/исходящий",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "rate(xray_traffic_uplink_bytes_total[2m]) * 8", "legendFormat": "uplink", "refId": "A" },
        { "expr": "rate(xray_traffic_downlink_bytes_total[2m]) * 8", "legendFormat": "downlink", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "bps" }, "overrides": [] }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Скорость пользовательского трафика (бит/с)",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "sum(rate(xray_traffic_user_uplink_bytes_total[2m])) * 8", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "bps" }, "overrides": [] }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Длительность скрейпа exporter (с)",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "xray_exporter_scrape_duration_seconds", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] }
    },
    {
      "id": 9,
      "type": "table",
      "title": "Топ-10 пользователей по исходящему трафику",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        {
          "expr": "sort_desc(topk(10, rate(xray_traffic_user_uplink_bytes_total[5m]) * 8))",
          "legendFormat": "{{user}}",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "expr": "topk(10, xray_traffic_user_uplink_bytes_total / 1024 / 1024 / 1024)",
          "legendFormat": "{{user}}",
          "format": "table",
          "instant": true,
          "refId": "B"
        }
      ],
      "transformations": [
        { "id": "joinByField", "options": { "byField": "user", "mode": "outer" } },
        { "id": "organize", "options": { "excludeByName": { "Time": true }, "renameByName": { "user": "User", "Value": "Current bps", "Value #B": "Total GB" } } }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          { "matcher": { "id": "byName", "options": "Current bps" }, "properties": [ { "id": "unit", "value": "bps" } ] },
          { "matcher": { "id": "byName", "options": "Total GB" }, "properties": [ { "id": "unit", "value": "decgbytes" } ] }
        ]
      }
    },
    {
      "id": 10,
      "type": "piechart",
      "title": "Распределение трафика по протоколам inbound",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "sum by (protocol) (rate(xray_traffic_inbound_uplink_bytes_total[10m]))", "legendFormat": "{{protocol}}", "refId": "A" }
      ],
      "options": { "displayLabels": ["name", "percent"], "legend": { "displayMode": "list", "placement": "right" } },
      "fieldConfig": { "defaults": { "unit": "bps" }, "overrides": [] }
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "Использование памяти Xray (Heap)",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 21 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "process_resident_memory_bytes{job=\"xray-core-metrics\"}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] }
    },
    {
      "id": 12,
      "type": "timeseries",
      "title": "CPU экспортера (cores)",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 21 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "rate(process_cpu_seconds_total{job=\"xray-core-metrics\"}[5m])", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "cores" }, "overrides": [] }
    },
    {
      "id": 13,
      "type": "timeseries",
      "title": "Ошибки exporter (total)",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 21 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "xray_exporter_fetch_errors_total", "legendFormat": "fetch_errors_total", "refId": "A" },
        { "expr": "xray_exporter_parse_errors_total", "legendFormat": "parse_errors_total", "refId": "B" }
      ],
      "fieldConfig": { "defaults": {}, "overrides": [] }
    },
    {
      "id": 14,
      "type": "timeseries",
      "title": "Общий трафик за день/месяц",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 29 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "increase(xray_traffic_downlink_bytes_total[24h])", "legendFormat": "24h", "refId": "A" },
        { "expr": "increase(xray_traffic_downlink_bytes_total[30d])", "legendFormat": "30d", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] }
    },
    {
      "id": 15,
      "type": "stat",
      "title": "Суммарный трафик пользователей (30d, GB)",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 29 },
      "datasource": { "type": "prometheus", "uid": "VM" },
      "targets": [
        { "expr": "sum(increase(xray_traffic_user_downlink_bytes_total[30d])) / 1024 / 1024 / 1024", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": { "unit": "decgbytes" }, "overrides": [] }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["xray"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Xray Core Metrics",
  "uid": "xray-core-metrics",
  "version": 1
}

